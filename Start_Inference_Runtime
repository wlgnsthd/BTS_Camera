#RTH
cd 
mkdir my-detection
cd my-detection/
touch my-detection.py
cd ~/jetson-inference/
#mount it into py file
docker/run.sh --volume ~/my-detection:/my-detection
ls /my-detection/

#revise py fiile
import jetson.inference
import jetson.utils

net = jetson.inference.detectNet("ssd-mobilenet-v2", threshold=0.5)
camera = jetson.utils.videoSource("/dev/video0")      # '/dev/video0' for V4L2 # csi://0
display = jetson.utils.videoOutput() # 'my_video.mp4' for file # "display://0"

while True: #display.IsStreaming()
	img = camera.Capture()
	detections = net.Detect(img)
	display.Render(img)
	display.SetStatus("Object Detection | Network {:.0f} FPS".format(net.GetNetworkFPS()))

#back to container
cd /my-detection/
ls
cat my-detection.py

#run
python3 my-detection.py
